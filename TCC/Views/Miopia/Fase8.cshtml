        <script>
            // Adicione um manipulador de eventos ao botão
            $('#enviarJogada').on('click', function () {
                // Suponha que 'minhaVariavel' seja a variável que você deseja verificar
                var acertos = localStorage.getItem("acertos");
                console.log(acertos + "verificação script no html");

                // Faça a verificação
                if (acertos >= 5) {
                    // Se a variável for maior que 15, redirecione para outra página
                    window.location.href = '/Miopia/GoodResult';
                } else {
                    // Senão, redirecione para outra página
                    window.location.href = '/Miopia/BadResult';
                }
            });
        </script>

