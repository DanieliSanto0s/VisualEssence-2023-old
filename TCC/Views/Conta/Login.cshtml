@model Tcc.Models.Usuario

<head>
    <link rel="stylesheet" href="~/css/login.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
</head>

<div class="conteudo">
    <div class="form-box">

            <div class="head-form">
                <img src="~/img/logo.png" /> <h2>Entrar</h2>

            </div>

        <form asp-action="Login" method="post" autocomplete="off">
            <div class="input-box">
                <label>Email</label>
                <input type="text" name="email" />
            </div>

            <div class="input-box">
                <label>Senha</label>
                <input type="password" name="senha" id="senha"  />
                <span class="bi bi-eye-slash" id="iconesenha"> </span>
            </div>

            @if(TempData["ErrorMessage"] !=null)
            {
            <p style="color: red">@TempData["ErrorMessage"]</p>
            }
            <div class="submit-btn">
                <button class="btn" type="submit">Entrar</button>
            </div>




            <div class="login-register">
                <p>Ainda não possui uma conta? <a href="~/Conta/Cadastro">Cadastrar</a> </p>
            </div>
        </form>
    

    </div>

</div>

<script src="~/js/loginregister.js"></script>


